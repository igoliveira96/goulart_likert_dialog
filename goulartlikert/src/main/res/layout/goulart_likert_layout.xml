<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewLikert"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="5dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tituloLikert"
                android:text="Como você está se sentindo?"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textColor="@color/goulartLikertColorPrimaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/otimoLikert"
                    style="?android:attr/borderlessButtonStyle"
                    android:clickable="true"
                    android:src="@drawable/baseline_sentiment_very_satisfied_black_48"
                    android:tint="@color/goulartLikertColorAccent"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/bomLikert"
                    style="?android:attr/borderlessButtonStyle"
                    android:src="@drawable/baseline_sentiment_satisfied_alt_black_48"
                    android:tint="@color/goulartLikertColorAccent"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/regularLikert"
                    style="?android:attr/borderlessButtonStyle"
                    android:src="@drawable/baseline_sentiment_satisfied_black_48"
                    android:tint="@color/goulartLikertColorAccent"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/fracoLikert"
                    style="?android:attr/borderlessButtonStyle"
                    android:src="@drawable/baseline_sentiment_very_dissatisfied_black_48"
                    android:tint="@color/goulartLikertColorAccent"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/insatisfeitoLikert"
                    style="?android:attr/borderlessButtonStyle"
                    android:src="@drawable/baseline_mood_bad_black_48"
                    android:tint="@color/goulartLikertColorAccent"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
